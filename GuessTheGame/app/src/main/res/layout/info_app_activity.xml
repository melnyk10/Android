<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_main"
    tools:context="com.forest.guessthegame.activity.Info_app_Activity">


    <ImageView
        android:id="@+id/iGuess_game_text"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:background="@drawable/guess_game_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version of game 1.0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="32dp" />

    <RelativeLayout
        android:layout_below="@+id/iGuess_game_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@id/linearLayout_rate"
            android:layout_width="match_parent"
            android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <Button
                android:id="@+id/iBtn_rate_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="btnOnClick_infoAct"
                android:text="Rate this app" />
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:text="@string/game_knowledge"
                    />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout_feedback"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/linearLayout_rate">
        <RelativeLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
            >

            <Button
                android:id="@id/iBtn_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="btnOnClick_infoAct"
                android:text="feedback" />
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:text="@string/feedback"
                    />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
