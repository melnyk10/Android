<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forest.guessthegame.Game_Activity">



    <ImageSwitcher
        android:id="@id/gameFrameSwitcher"
        android:background="@color/Black"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"/>

    <TextSwitcher
        android:id="@+id/iScore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/linearLayoutTopButtons"
        />


    <LinearLayout
        android:gravity="top"
        android:id="@id/linearLayoutTopButtons"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:baselineAligned="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:id="@+id/relativeLayout">

        <Button
            android:id="@id/iBtn_top_left"
            android:tag="@string/top_left"
            android:textColor="@color/White"
            android:layout_marginRight="2.0dip"
            android:background="@drawable/grey_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/button_text"
            android:alpha="0.75"
            android:ellipsize="end"
            android:maxLines="1"

            />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <Button
                android:id="@id/iBtn_top_right"
                android:tag="@string/top_right"
                android:textColor="@color/White"
                android:layout_marginLeft="2.0dip"
                android:background="@drawable/grey_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/button_text"
                android:alpha="0.75"
                android:ellipsize="end"
                android:maxLines="1"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:id="@id/linearLayoutBottomButtons"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:splitMotionEvents="false">

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <Button
                android:id="@id/iBtn_bottom_left"
                android:tag="@string/bottom_left"
                android:textColor="@color/White"
                android:layout_marginRight="2.0dip"
                android:background="@drawable/grey_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/button_text"
                android:alpha="0.75"
                android:ellipsize="end"
                android:maxLines="1"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <Button
                android:id="@id/iBtn_bottom_right"
                android:tag="@string/bottom_right"
                android:textColor="@color/White"
                android:layout_marginLeft="2.0dip"
                android:background="@drawable/grey_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/button_text"
                android:alpha="0.75"
                android:ellipsize="end"
                android:maxLines="1"
                />

        </RelativeLayout>
    </LinearLayout>

    <SlidingDrawer
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:id="@id/gameOptionsSlidingDrawer"
        android:layout_width="110.0dip"
        android:layout_height="match_parent"
        android:handle="@id/handle_layout"
        android:content="@id/game_options_relative_layout"
        android:layout_above="@+id/linearLayoutBottomButtons"
        android:layout_below="@+id/linearLayoutTopButtons">

        <FrameLayout
            android:id="@id/handle_layout"
            android:layout_width="40dp"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_gravity="right|center_vertical"
                android:id="@id/handle_button"
                android:background="@drawable/drawer_handle"
                android:layout_width="30.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/qs_game_view_hint_arrow_open"
                android:contentDescription="@string/tips" />
        </FrameLayout>

        <RelativeLayout
            android:id="@id/game_options_relative_layout"
            android:gravity="center|right"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hint_background"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:id="@id/game_options_linear_layout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageButton
                    android:id="@id/iImgBtn_resume_game"
                    android:background="@drawable/resume_normal_black"
                    android:gravity="center"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="5.0dip"
                    />
                <TextView
                    android:id="@id/text_view_description1"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resume_game" style="@style/text_4_sliding_drawer" />

                <ImageButton
                    android:id="@id/iImgBtn_restart_game"
                    android:layout_gravity="center"
                    android:background="@drawable/restart_normal_black"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                     />
                <TextView
                    android:id="@id/text_view_description2"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restart_game" style="@style/text_4_sliding_drawer" />

                <ImageButton
                    android:layout_gravity="center"
                    android:id="@id/iImgBtn_quit_game"
                    android:background="@drawable/quit_normal_black"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:contentDescription="@string/quit_game" />
                <TextView
                    android:id="@id/text_view_description3"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quit_game" style="@style/text_4_sliding_drawer" />
            </LinearLayout>
        </RelativeLayout>

    </SlidingDrawer>
</RelativeLayout>
